<% include ../partials/header %>

<div class="jumbotron">

	<h1 class="text-center mb-4">Add a new comment to <%= campground.name %></h1>
	<div class="row justify-content-center">
		<br>
		<form action="/campgrounds/<%= campground._id %>/comments" method="post">
			<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Text">
			</div>
			<div class="form-group">
				<input class="form-control" type="author" name="comment[author]" placeholder="Author">
			</div>
			<div class="form-group text-center">
				<button class="btn btn-light" type="submit">Submit</button>
			</div>
			<div class="text-center mt-5">
				<a href="/campgrounds">Go Back</a>
			</div>
		</form>
	</div>
</div>

<% include ../partials/footer %>