<% include partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Campgrounds page</h1>
			<p>Take a look at our top campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="campgrounds/new">Add Smth</a>
			</p>
		</div>
	</header>
	<div class="row">
		<% campgrounds.forEach((camp) => { %>
		<div class="col-sm-6 col-md-4 col-lg-3 text-center">
			<div class="card">
					<img class="card-img-top" src="<%=	camp.img %>" alt="">
					<div class="card-title lead">
							<%=	camp.name %>
					</div>
					<p><a class="btn btn-primary btn-sm" href="/campgrounds/<%= camp._id %>">Learn more</a></p>
			</div>
		</div>
		<% }); %>
	</div>

</div>

<% include partials/footer %>